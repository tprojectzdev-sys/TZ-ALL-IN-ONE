# TZ PRO Bot Configuration 
# Run SETUP.bat to configure automatically!
# IMPORTANT: Never commit the real .env file to git!

# Discord Bot (Required)
DISCORD_TOKEN=your_discord_token_here
DISCORD_CLIENT_ID=your_client_id
BOT_PREFIX=!
BOT_OWNERS=your_discord_user_id

# Database (Required)
MONGODB_URI=mongodb://localhost:27017/tzpro

# Dashboard Security (Change these!)
DASHBOARD_PORT=3000
DASHBOARD_BIND=127.0.0.1
DASHBOARD_ALLOWED_IPS=127.0.0.1,::1
DASHBOARD_TRUST_PROXY=false
DASHBOARD_USER=admin
DASHBOARD_PASSWORD=ChangeThisPassword123!
DASHBOARD_API_KEY=required_api_key_here
DASHBOARD_SESSION_SECRET=RandomStringHere_ChangeThis
# HTTPS (optional)
# DASHBOARD_HTTPS_KEY=path/to/privkey.pem
# DASHBOARD_HTTPS_CERT=path/to/fullchain.pem

# FiveM Server (Optional)
FIVEM_SERVER_IP=
FIVEM_SERVER_PORT=30120
# FiveM AntiCheat Integration (for !kick, !ban, !players commands)
FIVEM_API_URL=http://127.0.0.1:30120
FIVEM_API_KEY=TZ_ANTICHEAT_SECRET_KEY_CHANGE_ME
FIVEM_BRIDGE_DIR=C:/path/to/txData/YourServer.base/resources/ac_core